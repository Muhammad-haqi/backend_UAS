generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pesanan {
  id               Int     @id @default(autoincrement())
  namaPemesan      String
  nomorHp          String
  email            String
  maskapai         String
  kelas            String
  asal             String
  tujuan           String
  tanggalBerangkat String
  penumpang        Int
  namaPenumpang    Json
  kursi            Json
  total            Int
  totalFormatted   String
  paid             Boolean @default(false)
  status           String
  tanggalOrder     String

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model User {
  id          Int     @id @default(autoincrement())
  email       String? @unique
  nomorHp     String? @unique
  password    String
  namaLengkap String

  
  role        String   @default("user")

  pesanan Pesanan[]
}
